{
	"compilerOptions": {
		"target": "ES5", // 编译后的 JavaScript 版本（兼容旧浏览器）
		"module": "ESNext", // 使用 ESNext 的模块系统
		"declaration": true, // 生成 .d.ts 类型声明文件（如果是工具库建议开启）
		"outDir": "./dist", // 编译后的输出目录
		"rootDir": "./src", // 源码目录
		"strict": true, // 开启所有严格类型检查
		"moduleResolution": "node", // 模块解析方式
		"esModuleInterop": true, // 允许 default imports（兼容 CommonJS）
		"forceConsistentCasingInFileNames": true, // 文件名强制大小写一致
		"skipLibCheck": true, // 跳过库文件的类型检查，加快编译速度
		"types": ["node"]
	},
	"include": ["src"], // 只编译 src 目录下的文件
	"exclude": ["node_modules", "dist"] // 排除 node_modules 和 dist
}
